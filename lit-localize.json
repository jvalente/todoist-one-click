{
    "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
    "sourceLocale": "en",
    "targetLocales": [
        "pt"
    ],
    "tsConfig": "./tsconfig.json",
    "output": {
        "mode": "runtime",
        "outputDir": "./assets/locales",
        "localeCodesModule": "./assets/locale-codes.ts"
    },
    "interchange": {
        "format": "xliff",
        "xliffDir": "./xliff/"
    }
}
