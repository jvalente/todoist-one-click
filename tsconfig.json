// https://www.typescriptlang.org/docs/handbook/modules/guides/choosing-compiler-options.html
{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "target": "esnext",
        "module": "esnext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "moduleResolution": "bundler",
        "strict": true
    },
    "include": ["src", "e2e"]
}
