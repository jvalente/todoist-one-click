{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "includes": [
            "**",
            "!**/dist",
            "!**/e2e/test-results",
            "!**/e2e/html-report"
        ]
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            {
                                "type": false
                            }
                        ]
                    }
                }
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "off"
            },
            "correctness": {
                "noUnusedImports": "warn"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noConsole": "warn"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "semicolons": "asNeeded",
            "quoteStyle": "single"
        }
    }
}
