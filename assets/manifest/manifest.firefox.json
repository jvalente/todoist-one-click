{
    "name": "Todoist One-Click",
    "description": "Capture tasks with one click",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "unlimitedStorage", "contextMenus", "tabs"],
    "action": {
        "default_icon": {
            "48": "icons/icon.png",
            "96": "icons/icon.png"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "options_ui": {
        "page": "settings.html"
    },
    "commands": {
        "add-task": {
            "suggested_key": {
                "default": "Command+MacCtrl+E"
            },
            "description": "Add tab as task"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "todoist@oneclick"
        }
    }
}
