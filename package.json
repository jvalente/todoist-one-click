{
    "name": "todoist-one-click",
    "private": true,
    "version": "1.1.0",
    "type": "module",
    "scripts": {
        "dev:chrome": "npm run clear && DEV_BROWSER=chrome rollup -c --watch",
        "dev:firefox": "npm run clear && DEV_BROWSER=firefox rollup -c --watch",
        "test": "vitest tests/*",
        "e2e": "npx playwright test",
        "e2e:ui": "npx playwright test --ui",
        "clear": "rimraf dist",
        "build:chrome": "npm run clear && DEV_BROWSER=chrome rollup -c",
        "build:firefox": "npm run clear && DEV_BROWSER=firefox rollup -c"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "15.2.3",
        "@rollup/plugin-typescript": "11.1.6",
        "@types/chrome": "0.0.263",
        "rimraf": "5.0.5",
        "rollup": "4.13.0",
        "rollup-plugin-copy": "3.5.0",
        "tslib": "2.6.2",
        "typescript": "5.2.2",
        "vitest": "1.4.0"
    },
    "dependencies": {
        "lit": "3.1.2"
    }
}
